<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.ddmeng.todorealm.home.add.task.AddTaskFragment">

  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="?android:attr/actionBarSize"
      android:background="@color/colorPrimary" />

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/new_task_input_layout"
      style="@style/TextInputLayoutStyle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/new_task_edit_text"
        style="@style/TextInputEditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
  </com.google.android.material.textfield.TextInputLayout>

  <TextView
      android:id="@+id/list_title"
      style="@style/AddTaskItemStyle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:drawableEnd="@drawable/ic_expand_more_black_24dp"
      android:drawableLeft="@drawable/ic_list_black_24dp"
      android:drawableRight="@drawable/ic_expand_more_black_24dp"
      android:drawableStart="@drawable/ic_list_black_24dp"
      android:ellipsize="end" />

</LinearLayout>